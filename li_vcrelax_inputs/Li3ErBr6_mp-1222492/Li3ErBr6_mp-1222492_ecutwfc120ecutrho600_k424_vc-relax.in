&CONTROL
! .control.settings.
calculation               = vc-relax,
restart_mode              = from_scratch,
prefix                    = Li3ErBr6_mp-1222492_vc-relax,
pseudo_dir                = /central/groups/SeeGroup/qe_pseudopotentials/,

! .control.io.
outdir                    = .,
verbosity                 = low,

! .control.ion_relax.
tprnfor                   = .true.,
tstress                   = .true.,
forc_conv_thr             = 1e-05,
etot_conv_thr             = 1e-06,
nstep                     = 100,
/

&SYSTEM
! .system.structure.
ibrav                     = 0,
a                         = 1.0,
nat                       = 10,
ntyp                      = 3,

! .system.ecut.
ecutwfc                   = 120,
ecutrho                   = 600,

! .system.occupations.
occupations               = smearing,
smearing                  = fd,
degauss                   = 0.007,
/

&ELECTRONS
! .electrons.
diagonalization           = david,
conv_thr                  = 1e-08,
electron_maxstep          = 100,
mixing_mode               = plain,
mixing_beta               = 0.4,
/

&IONS
! .ions.
ion_dynamics              = bfgs,
wfc_extrapolation         = none,
pot_extrapolation         = none,
/

&CEll
! .cell.
cell_dynamics             = bfgs,
press                     = 0.0,
press_conv_thr            = 0.5,
/

